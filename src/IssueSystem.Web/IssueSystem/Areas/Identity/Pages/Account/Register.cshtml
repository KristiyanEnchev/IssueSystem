@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-12 mx-auto tm-login-col">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12 text-center">
                <section class="page-title">
                <div class="page-title-img bg-img bg-overlay-darken">
                    <div class="container">
                        <div class="row align-items-center justify-content-center height100px">
                            <div class="col-lg-8">
                                <div class="page-title-content">
                                    <div class="title-border">
                                        <h1 class="text-white text-uppercase font-weight-bold">@this.ViewData["Title"]</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              </section>
              </div>
            </div>
            <div class="row mt-2">
              <div class="col-12">
                <form id="account" method="post" class="tm-login-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                    <input asp-for="Input.Email" id="username" class="form-control validate" autocomplete="username" aria-required="true" placeholder="Email address" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>
                  <div class="form-group mt-3">
                    <input asp-for="Input.FirstName" class="form-control validate" autocomplete="firstname" aria-required="true" placeholder="First Name"/>                
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>  
                  </div>
                   <div class="form-group mt-3">
                    <input asp-for="Input.LastName" class="form-control validate" autocomplete="lastname" aria-required="true" placeholder="Last Name"/>                
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>  
                  </div>
                  <div class="form-group mt-3">
                    <input asp-for="Input.Password" id="password" class="form-control validate" autocomplete="new-password" aria-required="true" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>
                  <div class="form-group mt-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control validate" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />                
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>  
                  </div>


                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-block text-uppercase">Register</button>
                    </div>

                    <div class="text-center pt-3">
                        <p>
                            <a class="mt-5 btn btn-primary btn-block text-uppercase" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Go To Login</a>
                        </p>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
