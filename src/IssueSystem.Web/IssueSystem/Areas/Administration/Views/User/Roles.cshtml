@using IssueSystem.Models.Admin.User
@model UserRolesViewModel
@{
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<section class="page-title">
    <div class="page-title-img bg-img bg-overlay-darken">
        <div class="container">
            <div class="row align-items-center justify-content-center height100px">
                <div class="col-lg-8">
                    <div class="page-title-content">
                        <div class="title-border">
                            <h1 class="text-white text-uppercase font-weight-bold">Manage Employee Roles</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="page-title">
    <div class="page-title-img bg-img" style="background-color: #1884e9;">
        <div class="container">
            <div class="row align-items-center justify-content-center height100px">
                <div class="col-lg-8">
                    <div class="page-title-content">
                        <div class="title-border">
                            <div class="form-floating">
                                <h3 style="color: #ffff;">Employee: @Html.DisplayFor(m => m.Name)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row align-items-center justify-content-center">
    <div class="col-md-5 col-sm-10">
        <form class="text-center" id="roles" method="post">
            <input asp-for="UserId" type="hidden" name="UserId" value="@Model.UserId" />
            <input asp-for="Name" type="hidden" name="Name" value="@Model.Name" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <div class="">
                    <label>Employee Roles</label>
                    <select asp-for="RoleNames" id="selectMultiple" asp-items="@items" class="form-control selectpicker">

                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">&nbsp;</div>
            <div class="row">&nbsp;</div>
            <div class="row">&nbsp;</div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-6">
                    <div class="align-items-center justify-content-center">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
                <div class="col-6">
                    <div class="align-items-center justify-content-center">
                        <a asp-area="Administration" asp-action="CreateRole" asp-controller="Home" class="btn btn-primary btn-block">Create Role</a>
                    </div>
                </div>
                </div>
        </form>
    </div>
</div>
